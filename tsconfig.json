{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,

    "baseUrl": "./",

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
