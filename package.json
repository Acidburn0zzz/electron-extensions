{
  "name": "electron-extensions",
  "version": "3.0.0",
  "description": "Implementation of Chrome extension APIs for Electron",
  "keywords": [
    "electron",
    "chrome",
    "extensions",
    "api",
    "typescript"
  ],
  "homepage": "https://github.com/wexond/electron-extensions#readme",
  "exports": {
    "./": "./build/"
  },
  "author": {
    "name": "Eryk Rakowski",
    "email": "sentialx@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wexond/electron-extensions.git"
  },
  "bugs": {
    "url": "https://github.com/wexond/electron-extensions/issues"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.ts*\"",
    "lint-fix": "npm run lint -- --fix",
    "watch": "cross-env ENV='dev' webpack",
    "build": "webpack",
    "publish": "npm run build && ncp package.json build/package.json && cd build && npm publish",
    "link": "npm run build && ncp package.json build/package.json && cd build && npm link"
  },
  "pre-commit": [
    "lint-fix"
  ],
  "devDependencies": {
    "@types/chrome": "0.0.89",
    "@types/node": "12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "cross-env": "^6.0.0",
    "electron": "6.0.10",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "ncp": "^2.0.0",
    "prettier": "1.18.2",
    "ts-loader": "^6.1.2",
    "typescript": "3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {}
}